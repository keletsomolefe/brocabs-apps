  "item": [
    {
      "name": "Auth",
      "description": "Authentication and authorization endpoints",
      "item": [
        {
          "name": "OTP",
          "description": "OTP-based authentication flow",
          "item": [
            {
              "name": "Start OTP",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"identifierType\": \"phoneNumber\",\n  \"identifier\": \"+27123456789\",\n  \"applicationType\": \"rider\"\n}",
                  "options": {
                    "raw": {
                      "language": "json"
                    }
                  }
                },
                "url": {
                  "raw": "{{baseUrl}}/auth/otp/start",
                  "host": ["{{baseUrl}}"],
                  "path": ["auth", "otp", "start"]
                },
                "description": "Start OTP verification flow. Sends an OTP to the provided phone number or email.\n\n**identifierType**: `phoneNumber` or `email`\n\n**applicationType**: `rider` or `driver`"
              },
              "response": []
            },
            {
              "name": "Start OTP (Email)",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"identifierType\": \"email\",\n  \"identifier\": \"user@example.com\",\n  \"applicationType\": \"rider\"\n}",
                  "options": {
                    "raw": {
                      "language": "json"
                    }
                  }
                },
                "url": {
                  "raw": "{{baseUrl}}/auth/otp/start",
                  "host": ["{{baseUrl}}"],
                  "path": ["auth", "otp", "start"]
                },
                "description": "Start OTP verification using email address."
              },
              "response": []
            },
            {
              "name": "Verify OTP",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"code\": \"123456\"\n}",
                  "options": {
                    "raw": {
                      "language": "json"
                    }
                  }
                },
                "url": {
                  "raw": "{{baseUrl}}/auth/otp/verify",
                  "host": ["{{baseUrl}}"],
                  "path": ["auth", "otp", "verify"]
                },
                "description": "Verify the OTP code sent to the user. Must be called after `/auth/otp/start` in the same session."
              },
              "response": []
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifierType\": \"phoneNumber\",\n  \"identifier\": \"+27123456789\",\n  \"password\": \"yourPassword123\",\n  \"applicationType\": \"rider\"\n}",
              "options": {
                "raw": {
