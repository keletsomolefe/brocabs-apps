            "url": {
              "raw": "{{baseUrl}}/wallet/balance",
              "host": ["{{baseUrl}}"],
              "path": ["wallet", "balance"]
            },
            "description": "Get the authenticated user's wallet balance. Creates a wallet if one doesn't exist."
          },
          "response": []
        },
